UTC2LST <-  function(ts.i,lon.i)
{
        #ts.i is the input time based on UTC
        #lon.i is the input longitude
        ts.o    <-  ts.i + lon.i*3600/15
    return(ts.o)
}

LST2UTC <-  function(ts.i,lon.i)
{
        #ts.i is the input time based on LST
        #lon.i is the input longitude
        ts.o    <-  ts.i - lon.i*3600/15
    return(ts.o)
}
